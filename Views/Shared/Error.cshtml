@model ErrorViewModel
@{
    ViewData["Title"] = "Hata Oluştu";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h1 class="display-4">⚠ Bir hata oluştu</h1>
        <p class="lead">İşlem sırasında beklenmeyen bir hata meydana geldi.</p>

        @if (Model.ShowRequestId)
        {
            <p><strong>İstek Kodu:</strong> <code>@Model.RequestId</code></p>
        }

        <hr />
        <p class="text-muted">
            Lütfen geri dönüp tekrar deneyin ya da yöneticinize başvurun.
        </p>
    </div>
</div>
