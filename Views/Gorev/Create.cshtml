@model HomeTasksApp.Models.Gorev

@{
    ViewData["Title"] = "Yeni Görev Oluştur";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Baslik"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SonTarih"></label>
        <input asp-for="SonTarih" type="date" class="form-control" />
        <span asp-validation-for="SonTarih" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Kime Atanacak?</label>
        <select asp-for="AssignedUserId" asp-items="ViewBag.KullaniciListesi" class="form-control"></select>
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Görev Oluştur</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
