@model HomeTasksApp.Models.Gorev

@{
    ViewData["Title"] = "Görev Sil";
}

<h2>@ViewData["Title"]</h2>

<h4>Bu görevi silmek istediğinize emin misiniz?</h4>

<div class="border p-3 mb-3">
    <p><strong>Başlık:</strong> @Model.Baslik</p>
    <p><strong>Açıklama:</strong> @Model.Aciklama</p>
    <p><strong>Atanan:</strong> @Model.AssignedUser?.Name</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
