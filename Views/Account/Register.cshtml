@model HomeTasksApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsCreatingNewHousehold" class="form-check-input" />
        <label asp-for="IsCreatingNewHousehold" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="HouseholdName" class="form-label"></label>
        <input asp-for="HouseholdName" class="form-control" />
        <span asp-validation-for="HouseholdName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
